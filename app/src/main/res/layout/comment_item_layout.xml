<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="christiangenco 361 days ago"
        android:id="@+id/commentDesc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/commentText"
        android:layout_below="@+id/commentDesc"
        android:layout_marginTop="2dp"
        android:layout_alignLeft="@+id/commentDesc"
        android:text="Amazing talk!" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/replyDesc"
        android:paddingLeft="20dp"
        android:layout_alignLeft="@+id/commentDesc"
        android:layout_below="@+id/commentText"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/replyText"
        android:paddingLeft="20dp"
        android:layout_below="@+id/replyDesc"
        android:layout_alignLeft="@+id/commentDesc"
        android:layout_marginTop="2dp" />

</RelativeLayout>