<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Image diffing using CSS test test tes test"
        android:id="@+id/ItemTitleText"
        android:layout_toLeftOf="@+id/btnOpenBrowser"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:lines="2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOpenBrowser"
        android:src="@drawable/ic_open_in_browser_black_24dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/ItemDesc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/ItemDesc"
        android:layout_below="@+id/ItemTitleText" />
</RelativeLayout>